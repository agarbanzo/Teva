@model VOCE_TEVA_Asthma_Single_Page_Website.Models.EmailModel

<div class="vt-c-modal modal fade" id="shareModal" tabindex="-1" role="dialog" aria-labelledby="shareModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-container">
                    <svg><use xlink:href="#logo"></use></svg>
                </div>
                <h4 class="modal-title" id="shareModalLabel">Email a Friend</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="vt-c-form">
                                @using (Html.BeginForm("SendEmail","Home", FormMethod.Post, new { @class = "form-horizontal"}))
                                {
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.To, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(m => m.To, new { @class = "form-control", @type= "email", required = "required" })
                                            @Html.ValidationMessageFor(m => m.To)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.From, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(m => m.From, new { @class = "form-control", @type = "email", required = "required" })
                                            @Html.ValidationMessageFor(m => m.From)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Subject, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder= "Be the Boss of your Asthma" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Message, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control",  @placeholder = "Not all asthma is alike. Hard-to-control asthma can interfere with work, sleep and enjoying life. You can learn more about hard-to-control asthma at BeTheBossAsthma.com" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button type="submit" class="btn btn-default">Submit</button>                                          
                                            @*@Html.ActionLink("Submit", "SendEmail", "", null, new { @class = "btn btn-default", @type = "submit" })*@
                                            @*<%= ViewContext.RouteData.Values["id"] %>*@
                                            @*<button type="submit" class="btn btn-default">Submit</button>*@
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>